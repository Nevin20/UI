<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemOneFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="80dp"
       android:id="@+id/dailyneeds"
       android:layout_alignLeft="@id/img3"
       android:text="DAILYNEEDS"
       android:textColor="#000000"
       android:textStyle="bold"
       android:textSize="28dp"
       android:gravity="center"
       />



      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="50dp"
          android:layout_marginLeft="30dp"
          android:id="@+id/img2"
          android:layout_below="@+id/img"
          >
         <ImageButton
             android:src="@drawable/diaryone"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/button2"/>
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Beverages"
          android:layout_marginLeft="70dp"
          android:layout_below="@id/img2"/>

      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="210dp"
          android:id="@+id/img3"
          android:layout_below="@+id/dailyneeds">
         <ImageButton
                android:src="@drawable/cake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                />
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="DiaryNeeds"
          android:layout_marginLeft="240dp"
          android:layout_below="@id/img3"/>

      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="30dp"
          android:id="@+id/img4"
          android:layout_below="@+id/img2"
          >
         <ImageButton
             android:src="@drawable/vegetables1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/button4"/>
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Vegetables"
          android:layout_marginLeft="70dp"
          android:layout_below="@id/img4"/>

      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="210dp"
          android:id="@+id/img5"
          android:layout_below="@+id/img3"

          >
         <ImageButton
             android:src="@drawable/gift"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/button5"/>
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Gifts"
          android:layout_marginLeft="260dp"
          android:layout_below="@id/img5"/>

      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="30dp"
          android:id="@+id/img6"
          android:layout_below="@+id/img4"
          >
         <ImageButton
             android:src="@drawable/beer"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/button7"/>

      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="BakeryNeeds"
          android:layout_marginLeft="70dp"
          android:layout_below="@id/img6"/>

      <android.support.v7.widget.CardView
          android:alpha="0.8"
          android:elevation="6dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="210dp"
          android:id="@+id/img7"
          android:layout_below="@+id/img5"

          >
         <ImageButton
             android:src="@drawable/desserts"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/button8"/>

      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Desserts"
          android:layout_marginLeft="250dp"
          android:layout_below="@id/img7"/>

   </RelativeLayout>
</FrameLayout>